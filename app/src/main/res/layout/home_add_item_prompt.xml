<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_margin="15dp"
    >

    <LinearLayout
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Enter Navigation Button Name"
            android:textStyle="bold"
            android:textSize="19sp"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/homeBtnNamePrompt"
            android:imeOptions="actionDone"
            android:hint="Name"
            android:padding="15dp"
            android:background="@drawable/finance_btn_prompt_shape"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Enter Number for Icon (1 = finance, 2 = health, 3 = mental)"
            android:textStyle="bold"
            android:textSize="19sp"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/homeBtnIconPrompt"
            android:imeOptions="actionDone"
            android:hint="Number 1 - 3"
            android:padding="15dp"
            android:background="@drawable/finance_btn_prompt_shape"
            android:inputType="number"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Enter Number for Background (1 = finance, 2 = health, 3 = mental)"
            android:textStyle="bold"
            android:textSize="19sp"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/homeBtnBackgroundPrompt"
            android:imeOptions="actionDone"
            android:hint="Number 1 - 3"
            android:padding="15dp"
            android:background="@drawable/finance_btn_prompt_shape"
            android:inputType="number"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</LinearLayout>
